          ]
        },
        strategies: {
          title: 'Teaching Strategies',
          points: [
            'Culturally responsive teaching',
            'Inclusive curriculum design',
            'Language support integration',
            'Community connection building',
            'Cultural perspective integration'
          ]
        },
        accommodations: {
          title: 'Accommodations & Support',
          points: [
            'Language support services',
            'Cultural resource access',
            'Family engagement support',
            'Translation services',
            'Cultural celebration opportunities'
          ]
        }
      }
    };

    const principles = [
      { title: 'Individualization', description: 'Tailored support for unique needs' },
      { title: 'Evidence-Based Practice', description: 'Research-supported strategies' },
      { title: 'Family Partnership', description: 'Collaborative support system' },
      { title: 'Progress Monitoring', description: 'Regular assessment and adjustment' }
    ];

    // State Variables
    let activeCategory = 'LD';
    let activeSection = 'core';

    // DOM Elements
    const categoriesContainer = document.getElementById('categories');
    const sectionsContainer = document.getElementById('sections');
    const contentContainer = document.getElementById('content');
    const principlesContainer = document.getElementById('principles');

    // Initialize Categories
    function renderCategories() {
      categoriesContainer.innerHTML = '';
      for (const [key, category] of Object.entries(categories)) {
        const button = document.createElement('button');
        button.classList.add('category-button');
        button.style.backgroundColor = category.headerColor;
        if (key === activeCategory) button.classList.add('active');

        button.innerHTML = `<span>${key}</span><small>${category.name}</small>`;
        button.addEventListener('click', () => {
          activeCategory = key;
          activeSection = 'core';
          renderCategories();
          renderSections();
          renderContent();
        });

        categoriesContainer.appendChild(button);
      }
    }

    // Initialize Sections
    function renderSections() {
      sectionsContainer.innerHTML = '';
      const currentCategory = categories[activeCategory];
      const sections = ['core', 'strategies', 'accommodations'];

      sections.forEach(sectionKey => {
        const button = document.createElement('button');
        button.classList.add('section-button');
        if (sectionKey === activeSection) button.classList.add('active');

        button.textContent = currentCategory[sectionKey].title;
        button.addEventListener('click', () => {
          activeSection = sectionKey;
          renderSections();
          renderContent();
        });

        sectionsContainer.appendChild(button);
      });
    }

    // Initialize Content
    function renderContent() {
      const currentCategory = categories[activeCategory];
      const currentSection = currentCategory[activeSection];

      contentContainer.style.backgroundColor = currentCategory.color;

      contentContainer.innerHTML = `
        <h2>${currentCategory.name} - ${currentSection.title}</h2>
        <ul>
          ${currentSection.points.map(point => `<li>${point}</li>`).join('')}
        </ul>
      `;
    }

    // Initialize Principles
    function renderPrinciples() {
      principlesContainer.innerHTML = '';
      principles.forEach(principle => {
        const div = document.createElement('div');
        div.classList.add('principle');
        div.innerHTML = `
          <strong>${principle.title}</strong>
          <p>${principle.description}</p>
        `;
        principlesContainer.appendChild(div);
      });
    }

    // Initial Render
    function init() {
      renderCategories();
      renderSections();
      renderContent();
      renderPrinciples();
    }

    // Run the initialization on page load
    window.onload = init;
  </script>
</body>
</html>
